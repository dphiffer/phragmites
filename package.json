{
  "name": "phragmites",
  "version": "0.0.1",
  "description": "WordPress artist portfolio theme",
  "main": "index.js",
  "scripts": {
    "dist:mkdir": "mkdir -p dist",
    "dist:fonts": "cp -r node_modules/source-sans dist/",
    "dist:build": "sass css/main.scss:dist/main.css",
    "dist:watch": "sass --watch css:dist",
    "start": "npm-run-all dist:*",
    "build": "npm-run-all dist:mkdir dist:fonts dist:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dphiffer/phragmites.git"
  },
  "keywords": [
    "wordpress",
    "theme",
    "portfolio"
  ],
  "author": "Dan Phiffer <dan@phiffer.org>",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/dphiffer/phragmites/issues"
  },
  "homepage": "https://github.com/dphiffer/phragmites#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.5"
  },
  "dependencies": {
    "source-sans": "^3.46.0"
  }
}
